<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@mipmap/forecast_car"
        >
        <ImageView
            android:id="@+id/traffic_return"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/star_return"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/star_select"
                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="horizontal"
        android:background="@mipmap/forecast_five"
        >

    </LinearLayout>
    <LinearLayout
        android:layout_width="385dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        >
        <EditText
            android:id="@+id/traffic_route"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:hint="      地点"
            />
        <EditText
            android:id="@+id/traffic_time"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:hint="      时间"
            />
        <TextView
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:text="点"
            />
        <Button
            android:id="@+id/traffic_select"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:background="#ff9a14"
            android:text="查询"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="385dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >
    <TextView
        android:id="@+id/tra_ave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Average Rating 0.0"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            >
            <ImageView
                android:id="@+id/averagea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/greystar"
                />
            <ImageView
                android:id="@+id/averageb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/greystar"
                />
            <ImageView
                android:id="@+id/averagec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/greystar"
                />
            <ImageView
                android:id="@+id/averaged"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/greystar"
                />
            <ImageView
                android:id="@+id/averagee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/greystar"
                />
        </LinearLayout>
    </LinearLayout>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="2"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:text="道路等级:    "
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            >
            <ImageView
                android:id="@+id/daoa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/greystartwo"
                />
            <ImageView
                android:id="@+id/daob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/greystartwo"
                />
            <ImageView
                android:id="@+id/daoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/greystartwo"
                />
            <ImageView
                android:id="@+id/daod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/greystartwo"
                />
            <ImageView
                android:id="@+id/daoe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/greystartwo"
                />
            <TextView
                android:id="@+id/tra_dao"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="0.0"
                android:textSize="20sp"
                android:gravity="center"
                />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="2"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:text="拥堵等级:    "
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            >
            <ImageView
                android:id="@+id/yonga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/greystartwo"
                />
            <ImageView
                android:id="@+id/yongb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/greystartwo"
                />
            <ImageView
                android:id="@+id/yongc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/greystartwo"
                />
            <ImageView
                android:id="@+id/yongd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/greystartwo"
                />
            <ImageView
                android:id="@+id/yonge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/greystartwo"
                />
            <TextView
                android:id="@+id/tra_yong"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="0.0"
                android:textSize="20sp"
                android:gravity="center"
                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="2"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:text="公路等级:    "
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            >
            <ImageView
                android:id="@+id/gonga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/greystartwo"
                />
            <ImageView
                android:id="@+id/gongb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/greystartwo"
                />
            <ImageView
                android:id="@+id/gongc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/greystartwo"
                />
            <ImageView
                android:id="@+id/gongd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/greystartwo"
                />
            <ImageView
                android:id="@+id/gonge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/greystartwo"
                />
            <TextView
                android:id="@+id/tra_gong"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="0.0"
                android:textSize="20sp"
                android:gravity="center"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>